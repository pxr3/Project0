<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/main_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:gravity="center"
        android:id="@+id/titleView" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_marginTop="15dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/spotify_streamer"
        android:layout_below="@+id/titleView"
        android:gravity="center"
        android:id="@+id/spotifyButton"
        android:background="#F08C35"
        android:onClick="spotifyTapped"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_marginTop="15dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/scores_app"
        android:layout_below="@+id/spotifyButton"
        android:gravity="center"
        android:id="@+id/scoresButton"
        android:background="#F08C35"
        android:onClick="scoresTapped"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_marginTop="15dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/library_app"
        android:layout_below="@+id/scoresButton"
        android:gravity="center"
        android:id="@+id/libraryButton"
        android:background="#F08C35"
        android:onClick="libraryTapped"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_marginTop="15dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/buildit_app"
        android:layout_below="@+id/libraryButton"
        android:gravity="center"
        android:id="@+id/buildItButton"
        android:background="#F08C35"
        android:onClick="builditTapped"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_marginTop="15dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/xyz_app"
        android:layout_below="@+id/buildItButton"
        android:gravity="center"
        android:id="@+id/xyzButton"
        android:background="#F08C35"
        android:onClick="xyzTapped"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_marginTop="15dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/capstone_app"
        android:layout_below="@+id/xyzButton"
        android:gravity="center"
        android:id="@+id/capstoneButtons"
        android:background="#C10030"
        android:onClick="capstoneTapped"/>

</RelativeLayout>
